<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent">

        <!--Fix For "Scrollview can host only one direct child"-->
        <!--http://stackoverflow.com/questions/16699772/scrollview-can-host-only-one-direct-child-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--my name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/person_icon"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_margin="15dp"
                    android:src="@drawable/person_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/FBFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name" />

                    <EditText
                        android:id="@+id/FBLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name" />
                </LinearLayout>
            </LinearLayout>

            <!--my image-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/camera_icon"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_margin="15dp"
                    android:src="@drawable/camera_icon" />

                <ImageView
                    android:id="@+id/fb_profile_pic"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/call_icon" />

            </LinearLayout>

            <!--my phone-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/call_icon"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_margin="15dp"
                    android:src="@drawable/call_icon" />

                <EditText
                    android:id="@+id/myPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Phone Number" />

            </LinearLayout>

            <!--my email-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mail_icon"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_margin="15dp"
                    android:src="@drawable/mail_icon" />

                <EditText
                    android:id="@+id/myEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Email" />

            </LinearLayout>

            <!--my company-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/company_icon"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_margin="15dp"
                    android:src="@drawable/company_icon" />

                <EditText
                    android:id="@+id/myCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Work Place" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/confirm_profile_button"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:src="@drawable/check_icon"
            circle:backgroundTint="#009688" />
    </LinearLayout>

</FrameLayout>