<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">



<android.support.design.widget.FloatingActionButton
    android:id="@+id/nfcTag"
    android:layout_width="64dip"
    android:layout_height="64dip"
    circle:backgroundTint="#26A69A"
    android:layout_gravity="center_horizontal|bottom|right"
    android:src="@drawable/nfc_tag_icon"
    android:visibility="invisible"
    android:layout_row="2"
    android:layout_column="0"
    android:layout_alignEnd="@+id/gridLayout"
    android:layout_alignBottom="@+id/gridLayout" />


   <!-- <android.support.design.widget.FloatingActionButton
        android:id="@+id/nfcBeam"
        android:layout_width="64dip"
        android:layout_height="64dip"
        circle:backgroundTint="#FFA500"
        android:layout_gravity="center_horizontal|bottom|right"
        android:src="@drawable/nfc_beam_icon"
        android:layout_marginBottom="80dp" />-->
   <android.support.design.widget.FloatingActionButton
        android:id="@+id/statistics"
        android:layout_width="54dip"
        android:layout_height="54dip"
        circle:backgroundTint="#F06292"
        android:layout_gravity="center_horizontal|bottom|right"
        android:src="@drawable/stat_2"
        android:layout_marginBottom="80dp"
        android:layout_alignParentEnd="true"
       android:visibility="invisible"
        android:layout_marginRight="10dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mapInfo"
        android:layout_width="64dip"
        android:layout_height="64dip"
        circle:backgroundTint="#26A69A"
        android:layout_gravity="bottom|right"
        android:src="@drawable/map_icon"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="160dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/redeem_button"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:visibility="invisible"
        android:src="@drawable/check_icon"
        circle:backgroundTint="#F06292"
        android:layout_gravity="right|bottom" />

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
        android:fillViewport="true"

        xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="never"
        android:layout_gravity="right|bottom">
    <!-- Here you put the rest of your current view-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="easyconnect.example.com.easyconnect.ContactInfoActivity"
        android:id="@+id/contactlayout">



        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:maxHeight="250dp"
                android:adjustViewBounds="true"
                android:id="@+id/ad_pic"

                android:src="@drawable/hero_pdt_value_au"


                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/ad_title"
                android:layout_row="1"
                android:layout_column="0"
                android:textAlignment="center"
                android:gravity="center_horizontal|fill_vertical"
                android:textStyle="bold"
                android:background="#26A69A"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_rowSpan="3"
                android:layout_marginTop="0dp" />



            <TextView
                android:layout_width="279dp"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_row="4"
                android:layout_column="0"
                android:textAlignment="center"
                android:text="Word"
                android:textColor="@color/abc_secondary_text_material_light"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/word" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/contact_name"
                android:layout_row="5"
                android:layout_column="0"
                android:textAlignment="textStart"
                android:enabled="true"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@android:color/black"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_row="8"
                android:layout_column="0"
                android:textAlignment="center"
                android:text="Letters You Collected"
                android:textColor="@color/abc_secondary_text_material_light"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/collected_letters"
                android:layout_row="9"
                android:layout_column="0"
                android:textAlignment="textStart"
                android:enabled="true"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@android:color/black"
                android:layout_marginLeft="10dp" />
<!--

            <TextView
                android:layout_width="279dp"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_row="6"
                android:layout_column="0"
                android:textAlignment="center"
                android:text="Phone Number"
                android:textColor="@color/abc_secondary_text_material_light"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/phone_number"
                android:layout_row="7"
                android:layout_column="0"
                android:textAlignment="textStart"
                android:enabled="true"
                android:autoLink="phone"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@android:color/black"
                android:layout_marginLeft="10dp" />
-->

            <TextView
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/game_name"
                android:layout_row="11"
                android:layout_column="0"
                android:textAlignment="textStart"
                android:enabled="true"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@android:color/black"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Description"
                android:layout_row="12"
                android:layout_column="0"
                android:textAlignment="center"
                android:textColor="@color/abc_secondary_text_material_light"

                android:drawableBottom="@android:color/black"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                 />

            <TextView
                android:layout_width="279dp"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_row="10"
                android:layout_column="0"
                android:textAlignment="center"
                android:text="Game Name"
                android:textColor="@color/abc_secondary_text_material_light"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/ad_description"
                android:layout_row="13"
                android:layout_column="0"
                android:textAlignment="textStart"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="13"
                android:layout_column="1">
            </View>


        </GridLayout>

    </RelativeLayout>

</ScrollView>

</FrameLayout>