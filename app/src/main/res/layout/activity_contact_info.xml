<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- Here you put the rest of your current view-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="easyconnect.example.com.easyconnect.ContactInfoActivity"
        android:id="@+id/contactlayout">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="279dp"
                android:layout_height="59dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="DR.Evil"
                android:id="@+id/contact_name"
                android:layout_row="1"
                android:layout_column="0"
                android:textAlignment="center"
                android:gravity="center_horizontal|fill_vertical"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="181dp"
                android:layout_height="212dp"
                android:id="@+id/profile_pic"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/austin"
                android:layout_gravity="center|fill"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/phonetitle"
                android:layout_row="2"
                android:layout_column="0"
                android:textAlignment="center"
                android:text="@string/phone_title"
                android:textColor="@color/abc_secondary_text_material_light"
                android:singleLine="true" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="514-220-8630"
                android:id="@+id/phone_number"
                android:layout_row="3"
                android:layout_column="0"
                android:textAlignment="textStart"
                android:enabled="true"
                android:autoLink="phone"
                android:textColorLink="@color/link_text_material_light"
                android:layout_marginBottom="5dp"
                android:drawableBottom="@android:color/black"/>

            <TextView
                android:layout_width="279dp"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView9"
                android:layout_row="4"
                android:layout_column="0"
                android:textAlignment="center"
                android:text="Mobile"
                android:textColor="@color/switch_thumb_normal_material_dark" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/email_title"
                android:id="@+id/emailtitle"
                android:layout_row="5"
                android:layout_column="0"
                android:textAlignment="center"
                android:textColor="@color/abc_secondary_text_material_light"
                android:singleLine="true"
                android:phoneNumber="false"

                android:shadowColor="@color/green" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="moataz.elbarkouky@mail.utoronto.ca"
                android:id="@+id/email_address"
                android:layout_row="6"
                android:layout_column="0"
                android:textAlignment="textStart"
                android:autoLink="email"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView10"
                android:layout_row="7"
                android:layout_column="0"
                android:textAlignment="center"
                android:text="Outlook"
                android:textColor="@color/switch_thumb_normal_material_dark" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/address_title"
                android:id="@+id/addresstitle"
                android:layout_row="9"
                android:layout_column="0"
                android:textAlignment="center"
                android:textColor="@color/abc_secondary_text_material_light"

                android:drawableBottom="@android:color/black"/>

            <TextView
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="50 road west"
                android:id="@+id/home_address"
                android:layout_row="10"
                android:layout_column="0"
                android:textAlignment="textStart"
                android:autoLink="email"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="279dp"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView11"
                android:layout_row="11"
                android:layout_column="0"
                android:textAlignment="center"
                android:text="Home"
                android:textColor="@color/switch_thumb_normal_material_dark" />

        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/twitter_button"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/twitter_icon"
                android:layout_gravity="left"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/facebook_button"
                android:layout_row="1"
                android:layout_column="0"
                android:src="@drawable/social_facebook_box_blue"
                android:layout_gravity="left" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:id="@+id/linkedin_button"
                android:layout_row="2"
                android:layout_column="0"
                android:src="@drawable/ln"
                android:layout_gravity="left" />

        </GridLayout>

    </RelativeLayout>

</ScrollView>

