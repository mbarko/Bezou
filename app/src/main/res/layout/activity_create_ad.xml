<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="567dp"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

        <!--Fix For "Scrollview can host only one direct child"-->
        <!--http://stackoverflow.com/questions/16699772/scrollview-can-host-only-one-direct-child-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--my name-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="250dp"
                    android:adjustViewBounds="true"

                    android:id="@+id/adImage"
                    android:src="@drawable/hero_pdt_value_au" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/person_icon"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_margin="15dp"
                    android:src="@drawable/word_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/fullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="0"
                        android:inputType="textPersonName"
                        android:text="Game Word"
                        android:cursorVisible="true"
                        />

                </LinearLayout>
            </LinearLayout>


            <!--Phone Number-->
           <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/call_icon"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_margin="15dp"
                    android:src="@drawable/call_icon" />

                <EditText
                    android:id="@+id/phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="0"
                    android:inputType="textPersonName"
                    android:text="Phone Number"

                    android:cursorVisible="false"/>

            </LinearLayout>-->

            <!--AD Title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mail_icon"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_margin="15dp"
                    android:src="@drawable/mail_icon" />

                <EditText
                    android:id="@+id/adTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="0"
                    android:inputType="textPersonName"
                    android:text="Ad Title"
                    android:cursorVisible="true"/>

            </LinearLayout>

            <!--AD Details-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/company_icon"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_margin="15dp"
                    android:src="@drawable/company_icon" />

                <EditText
                    android:id="@+id/adDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="0"
                    android:inputType="textPersonName"
                    android:text="Ad Details"
                    android:cursorVisible="false"/>

            </LinearLayout>
            <!--Image Upload-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/uploadbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/uploadbtn"
                    android:visibility="invisible"/>

            </LinearLayout>
            <!--AD Image Url-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/camera_icon"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_margin="15dp"
                    android:visibility="invisible"/>
                    android:src="@drawable/camera_icon"/>

                <EditText
                    android:id="@+id/adImageUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="0"
                    android:inputType="textPersonName"
                    android:text=""
                    android:visibility="invisible"/>
                    android:cursorVisible="true"/>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_ad_button"
        android:layout_width="64dip"
        android:layout_height="64dip"

        android:src="@drawable/check_icon"
        circle:backgroundTint="#F06292"
        android:layout_gravity="right|bottom" />

</FrameLayout>